<Page x:Class="HomeWork_13.Clients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeWork_13"
      xmlns:VM="clr-namespace:HomeWork_13.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Clients"  Foreground="Black" Background="#FFF0F0F0">
    
    
    <Grid x:Name="PageGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0" x:Name="BottonGridLane"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Действия" Height="auto" Width="auto">
                <MenuItem Header="Удалить"
                          x:Name="DellClientMenu" Click="DellClientMenu_Click"/>
            </MenuItem>
        </Menu>

        <DataGrid x:Name="AccountListGrid" Grid.Row="1"
                      AutoGenerateColumns="True"
                      AutoGeneratingColumn="gridAutoGeneratedColumnsEvent"
                  ItemsSource="{Binding Clients, Mode=TwoWay}" 
                  >
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="OpenCartInfo"
                                    DataContext="{Binding}">Показать счета</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Page>
